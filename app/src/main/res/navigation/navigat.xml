<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigat"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cnnews.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >


        <action
            android:id="@+id/action_homeFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <argument
            android:name="article"
            app:argType="com.example.cnnews.data.local.dao.model.NewsBookmarkEntity" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkFragment"
        android:name="com.example.cnnews.ui.bokmark.BookmarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" >


        <action
            android:id="@+id/action_bookmarkFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <argument
            android:name="article"
            app:argType="com.example.cnnews.data.local.dao.model.NewsBookmarkEntity" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.cnnews.ui.article.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" >

        <action
            android:id="@+id/action_articleFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_articleFragment_to_bookmarkFragment2"
            app:destination="@id/bookmarkFragment" />
        <argument
            android:name="article"
            app:argType="com.example.cnnews.data.local.dao.model.NewsBookmarkEntity" />

    </fragment>
</navigation>